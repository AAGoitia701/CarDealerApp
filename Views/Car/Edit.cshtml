@model Car

<link rel="stylesheet" href="~/css/SearchOwner.css">
<script src="~/js/SearchOwnerInput.js" defer></script>

<h2>Edit Car</h2>
<div class="col-md-12">
    <img src="@Model.ImgUrl" class="img-fluid rounded-start" alt="Imagen del vehículo">
</div>
<form method="post" enctype="multipart/form-data">
    <input type="hidden" id="OwnerId" name="OwnerId" />
    <input asp-for="CarId" hidden/>
    <input type="hidden" asp-for="ImgUrl" />
    <div>
        <label asp-for="LicencePlate"></label>
        <input asp-for="LicencePlate" class="form-control" readonly/>
        <span asp-validation-for="LicencePlate" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />
        <span asp-validation-for="Brand" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Color"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="DateTime"></label>
        <input asp-for="DateTime" class="form-control" type="date"/>
        <span asp-validation-for="DateTime" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ImgUrl"></label>
        <input asp-for="ImgUrl" name="file" type="file" accept="image/*" class="form-control" />
        <span asp-validation-for="ImgUrl" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="OwnerId">Owner</label>
        <input type="text" class="form-control" id="OwnerName" name="OwnerName" placeholder="Write owner name..." autocomplete="off">
        <div id="floatingSuggestions" class="suggestions-box"></div> <!-- Suggestions here -->
    </div>

    
    <button type="submit" class="btn btn-primary">Save</button>

    <button asp-controller="Car" asp-action="Index" class="btn btn-secondary">Go Back</button>
</form>

