@model Car

<table class="table">
    <thead>
        <tr>
            <th>Licence Plate</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Color</th>
            <th>Year</th>
            <th>Owner</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>@Model.LicencePlate</td>
            <td>@Model.Brand</td>
            <td>@Model.Model</td>
            <td>@Model.Color</td>
            <td>@Model.DateTime.Year</td>
            @if(Model.Owner == null)
            {
                <td>No Owner</td>
            }
            else
            {
                <td>@Model.Owner.FullName</td>
                
            }
        </tr>
    </tbody>
</table>
<div class="btn-group" role="group">
    <a asp-controller="Car" asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-primary mr-3">Edit</a>
    <a onclick="confirmDelete('@Url.Action("Delete","Car",new{id = Model.CarId})')" class="btn btn-primary">Delete</a>
</div>

<a asp-controller="Car" asp-action="Index" class="btn btn-secondary">Go Back</a>

@section Scripts{
    <script src="~/js/Confirm.js"></script>
}